      .Name("grid")
      .Columns(columns =>
      {
        columns.Bound(c => c.Mach_Desc);
        columns.Bound(c => c.Lease_Rate);
        columns.Bound(c => c.Active);
      })
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("tblMaches_Read", "Grid"))
      )
)
